<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_root"
        android:layout_marginTop="40dp"
        android:background="@color/title_background"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:id="@+id/monitor"
            android:textSize="42sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_root"
        android:layout_marginTop="50dp">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seven.btn"
                android:textSize="30sp"
                android:id="@+id/btnSeven"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eight.btn"
                android:textSize="30sp"
                android:id="@+id/btnEight"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nine.btn"
                android:textSize="30sp"
                android:id="@+id/btnNine"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_gravity="fill_horizontal"
                android:text="@string/divide.btn"
                android:textSize="30sp"
                android:id="@+id/btnDivide"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four.btn"
                android:textSize="30sp"
                android:id="@+id/btnFour"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five.btn"
                android:textSize="30sp"
                android:id="@+id/btnFive"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/six.btn"
                android:textSize="30sp"
                android:id="@+id/btnSix"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/multiply.btn"
                android:textSize="30sp"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/btnMultiply"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one.btn"
                android:textSize="30sp"
                android:id="@+id/btnOne"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two.btn"
                android:textSize="30sp"
                android:id="@+id/btnTwo"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three.btn"
                android:textSize="30sp"
                android:id="@+id/btnThree"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/minus.btn"
                android:textSize="30sp"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/btnMinus"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel.btn"
                android:textSize="30sp"
                android:id="@+id/btnCancel"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero.btn"
                android:textSize="30sp"
                android:id="@+id/btnZero"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/equals.btn"
                android:textSize="30sp"
                android:id="@+id/btnEquals"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/plus.btn"
                android:textSize="30sp"
                app:layout_gravity="fill_horizontal"
                android:id="@+id/btnPlus"/>

        </android.support.v7.widget.GridLayout>

    </FrameLayout>

</RelativeLayout>
